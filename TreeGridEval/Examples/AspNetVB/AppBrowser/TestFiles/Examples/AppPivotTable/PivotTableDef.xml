<Grid>
   <Cfg id="PivotSource" SuppressCfg="1" Selecting="0" Dragging="0"/>
   <Cols>
      <C Name="A" Width="80"/>
      <C Name="B" Width="80"/>
      <C Name="C" Width="80"/>
      <C Name="X" Width="80" Type="Float"/>
      <C Name="Y" Width="80" Type="Float"/>
   </Cols>
   <Header A="Name1" B="Name2" C="Name3" X="Number1" Y="Number2"/>
